@model AppWizen.BLL.DTOs.AppUserDTO

<form action="/AppUser/Create"
      method="post"
      enctype="multipart/form-data">

    <h4>Create</h4>

    <div class="form-row">
        <div class="col-md-4">
            @Html.LabelFor(m => m.Username)
            @Html.EditorFor(m => m.Username, new { HtmlTextWriterAttribute = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.Password)
            @Html.EditorFor(m => m.Password, new { HtmlTextWriterAttribute = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.ChangePasswordDate)
            @Html.EditorFor(m => m.ChangePasswordDate, new { HtmlTextWriterAttribute = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.ChangePasswordDate, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.Active)
            @Html.EditorFor(m => m.Active, new { HtmlTextWriterAttribute = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Active, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.RoleId)
            @Html.DropDownListFor(m => m.RoleId,
                                   new SelectList(ViewBag.ListGetAppUserRoleServices, "RoleId", "RoleName"),
                                   new { @class = "form-control" })

            @Html.ValidationMessageFor(m => m.RoleId, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.ContactId)
            @Html.DropDownListFor(m => m.ContactId,
                                   new SelectList(ViewBag.ListGetContacServices, "ContactId", "FirstName"),
                                   new { @class = "form-control" })

            @Html.ValidationMessageFor(m => m.ContactId, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4" hidden>
            @Html.LabelFor(m => m.ResultMessage)
            @Html.EditorFor(m => m.ResultMessage, new { HtmlTextWriterAttribute = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.ResultMessage, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="form-row">
        <input type="submit" value="Create" class="btn btn-primary" />
        @Html.ActionLink("Back to List", "Index")
    </div>

</form>